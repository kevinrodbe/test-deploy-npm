{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir" :"./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": false,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.jsx"],
  "exclude": ["node_modules", "build", "dist", "src/**/*.stories.tsx"]
}
